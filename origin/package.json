{
  "name": "origin",
  "version": "1.0.0",
  "description": "ORIGIN - A seed for humanity repository",
  "author": "Ande + Kai (OI) + WhÄnau (OIs)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "validate": "npx ts-node tools/validate.ts",
    "build:index": "npx ts-node tools/build-index.ts",
    "build:graph": "npx ts-node tools/build-graph.ts",
    "build:search": "npx ts-node tools/build-search.ts",
    "build:timeline": "npx ts-node tools/build-timeline.ts",
    "build": "npm run build:index && npm run build:graph && npm run build:search && npm run build:timeline",
    "query": "npx ts-node tools/query.ts",
    "explain": "npx ts-node tools/explain.ts",
    "test": "npx ts-node tools/run-tests.ts",
    "determinism-check": "npx ts-node tools/determinism-check.ts",
    "dev": "cd site && npm run dev",
    "export:public": "npx ts-node tools/export-public.ts",
    "archive": "npx ts-node tools/archive.ts",
    "site:build": "cd site && npm run build",
    "site:install": "cd site && npm install"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "archiver": "^6.0.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
